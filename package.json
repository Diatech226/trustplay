{
  "name": "trustplay-monorepo",
  "private": true,
  "workspaces": [
    "site",
    "cms",
    "backend"
  ],
  "scripts": {
    "dev:site": "npm --workspace site run dev",
    "dev:cms": "npm --workspace cms run dev",
    "dev:api": "npm --workspace backend run dev",
    "start:api": "npm --workspace backend run start",
    "dev": "concurrently -k -n site,cms,api \"npm:dev:site\" \"npm:dev:cms\" \"npm:dev:api\"",
    "build:site": "npm --workspace site run build",
    "build:cms": "npm --workspace cms run build",
    "build:api": "npm --workspace backend run build",
    "build": "npm run build:api && npm run build:site && npm run build:cms",
    "lint": "npm --workspace site run lint && npm --workspace cms run lint"
  },
  "devDependencies": {
    "@swc/core": "^1.15.8",
    "concurrently": "^8.2.2"
  }
}
