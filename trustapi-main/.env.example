# Port d'écoute HTTP
PORT=3000

# Connexion MongoDB (format mongodb+srv://user:password@cluster/db)
DATABASE_URL=

# Clé de signature JWT
JWT_SECRET=

# Origines CORS autorisées (séparées par des virgules). Exemple : http://localhost:5173,http://localhost:3000
CORS_ORIGIN=http://localhost:5173

# URL du frontend (utilisé pour construire les liens de réinitialisation)
FRONTEND_URL=http://localhost:5173

# Répertoire des fichiers uploadés (sera servi via /uploads)
UPLOAD_DIR=uploads

# Emails de reset (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxx
MAIL_FROM="Trust Media <onboarding@resend.dev>"
